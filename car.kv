#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car>:
    size: 20, 10
    origin: 10, 5
    canvas:
        PushMatrix
        Color:
            rgba: 1,1,0,1
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            #pos: 450,325
            size: self.size
            source: "./images/car.png"
        PopMatrix

<Game>:
    car: game_car
    
    canvas:
        Rectangle:
            pos: self.pos
            size: 1429, 660
            #source: "./images/citymap.png"
            source: "./images/MASK1_.png"

    Car:
        id: game_car
        center: self.parent.center
    